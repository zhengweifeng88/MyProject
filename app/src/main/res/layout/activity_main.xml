<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.bwei.com.myproject.view.MainActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tujian"
                android:layout_width="32sp"
                android:layout_height="22sp"
                android:text="推荐"
                android:textColor="@drawable/text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_tuijian"
                android:layout_width="14dp"
                android:layout_height="1dp"
                android:background="#FF333333" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_guanzhu"
                android:layout_width="32sp"
                android:layout_height="22sp"
                android:text="关注"
                android:textColor="@drawable/text_color"
                android:textSize="16sp" />

            <View
                android:id="@+id/view_guanzhu"
                android:layout_width="14dp"
                android:layout_height="1dp"
                android:background="#FF333333"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll"></android.support.v4.view.ViewPager>
    <ImageView
        android:id="@+id/img_geren"
        android:background="@drawable/geren"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="13dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <ImageView
        android:id="@+id/img_fabu"
        android:background="@drawable/fabu"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="13dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</RelativeLayout>
