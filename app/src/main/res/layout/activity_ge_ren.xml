<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ge_ren"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.bwei.com.myproject.view.GeRenActivity">
    <ImageView
        android:background="@mipmap/ic_launcher"
        android:id="@+id/geren_shezhi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="47dp"/>
    <ImageView
        android:layout_below="@id/geren_shezhi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/geren_touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/geren_name"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/geren_touxiang"
        android:layout_width="48dp"
        android:layout_height="22dp"
        android:text="王尼玛"
        android:textColor="#FF333333"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/geren_zhiwei"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/geren_name"
        android:layout_width="144dp"
        android:layout_height="17dp"
        android:text="北京今生科技有限公司硕士"
        android:textColor="#FF333333"
        android:textSize="12dp"
        />
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_below="@id/geren_zhiwei"
        android:id="@+id/geren_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="60dp"
                android:layout_height="17dp"
                android:text="收到的赞赏"
                android:textColor="#FF333333"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="46dp"
                android:layout_height="22dp"
                android:text="¥11.45"
                android:textColor="#FF333333"
                android:textSize="16dp"
                />
        </LinearLayout>
        <View
            android:layout_gravity="center_vertical"
            android:layout_width="0.5dp"
            android:layout_height="24dp"
            android:background="#FF999999"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="48dp"
                android:layout_height="17dp"
                android:text="我的粉丝"
                android:textColor="#FF333333"
                android:textSize="12dp"
                />

            <TextView
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:text="12345"
                android:textColor="#FF333333"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>
    <ListView
        android:id="@+id/geren_lv"
        android:layout_marginTop="28dp"
        android:layout_below="@id/geren_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <ImageView
        android:id="@+id/img_geren"
        android:background="@drawable/cha"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
</RelativeLayout>
