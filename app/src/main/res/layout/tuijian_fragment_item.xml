<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="13dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tuijian_fragment_item_img"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tuijian_fragment_item_tv"/>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/tuijian_fragment_item_xie"
            android:layout_marginLeft="13dp"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:background="@drawable/xie"/>
        <TextView
            android:id="@+id/tuijian_fragment_item_pinlun"
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_height="14dp"
            android:text="771"
            android:textColor="#FF999999"
            android:textSize="10dp"
            />
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/tuijian_fragment_item_xin"
            android:layout_marginLeft="8dp"
            android:layout_width="8dp"
            android:layout_height="7dp"
            android:background="@drawable/xin"/>
        <TextView
            android:id="@+id/tuijian_fragment_item_xihuan"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:text="12万"
            android:textColor="#FF999999"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/tuijian_fragment_item_time"
            android:layout_gravity="center_vertical"
            android:layout_width="50dp"
            android:layout_height="14dp"
            android:text="12个小时前"
            android:textColor="#FF999999"
            android:textSize="10dp"
            />
        <LinearLayout
            android:layout_marginRight="13dp"
            android:gravity="right|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/tuijian_fragment_item_guanzhuimg"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/guanzhu"/>
            <TextView
                android:id="@+id/tuijian_fragment_item_guanzhutv"
                android:layout_marginLeft="4dp"
                android:layout_width="20dp"
                android:layout_height="14dp"
                android:text="关注"
                android:textColor="#f00"
                android:textSize="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
